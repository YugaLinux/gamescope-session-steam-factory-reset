#!/usr/bin/bash

set -eu

# This script is called by Steam and must live here


# Hook for factory reset script
STEAMOS_FACTORY_RESET_CONFIG_SCRIPT="/usr/libexec/gamescope-session-steam/system-factory-reset-config"

if [ -x $STEAMOS_FACTORY_RESET_CONFIG_SCRIPT ] ; then
	# Call factory reset script as current user
	${STEAMOS_FACTORY_RESET_CONFIG_SCRIPT} $@
else
	exit 0
fi
